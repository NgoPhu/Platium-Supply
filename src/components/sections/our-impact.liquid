{%- assign blocks = section.blocks -%}

{%- if blocks.size > 0 -%}
  <div class="container py-8 lg:py-[72px]">
    <div class="flex flex-col items-center lg:flex-row xl:gap-12">
      {%- if section.settings.title != blank -%}
        <h2 class="w-full text-3xl text-grey-900 font-bold font-body lg:max-w-[220px] xl:max-w-[234px] lg:text-4xl">{{- section.settings.title -}}</h2>
      {%- endif -%}
      <div class="flex flex-col flex-1 flex-wrap justify-between items-center gap-4 w-full lg-max:pt-4 lg:flex-row xl:gap-6">
        {%- for block in blocks -%}
          <div class="w-full p-6 bg-white rounded-lg border border-default shadow-sm lg:w-[calc((100%_/_3)_-_11px)] xl:w-[calc((100%_/_3)_-_24px)] lg:h-36 lg:p-8">
            {%- if block.settings.title != blank -%}
              <h3 class="text-3xl font-bold font-body lg:text-4xl">{{- block.settings.title -}}</h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="pt-2 text-lg text-link">{{- block.settings.description -}}</p>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
{%- endif -%}



{% schema %}
{
  "name": "Our Impact",
  "class": "bg-grey-100",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Impact"
    }
  ]
}
{% endschema %}