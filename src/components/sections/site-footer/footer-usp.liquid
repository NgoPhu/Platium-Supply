{%- assign blocks = section.blocks -%}

{%- if blocks.size > 0 -%}
  <section class="py-6 footer-usp bg-success-bg md:border-t md:border-green lg:py-7">
    <div class="container">
      <div class="grid grid-cols-3 gap-x-[22px] gap-y-6 lg:gap-6 lg:justify-center lg:items-center lg:flex lg:flex-row xl:gap-12">
        {%- for block in blocks -%}
          {%- liquid
            assign image = block.settings.image
            assign title = block.settings.title
            assign url = block.settings.url
          -%}
          {%- if url != blank -%}
            <a href="{{- url -}}" class="flex flex-col items-center justify-start gap-2 lg:flex-row lg:justify-center lg:gap-4">
          {%- else -%}
            <div class="flex flex-col items-center justify-start gap-2 lg:flex-row lg:justify-center lg:gap-4">
          {%- endif -%}
          {%- if image != blank -%}
            {% render 'image', image: image, class: 'w-auto h-8' %}
          {%- endif -%}
          {%- if title != blank -%}
            <p class="w-full max-w-[80px] text-sm text-secondary text-center font-semibold lg-max:px-1 lg:text-left">
              {{- title -}}
            </p>
          {%- endif -%}
          {%- if url != blank -%}
            </a>
          {%- else -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </section>
{%- endif -%}

{% schema %}
{
  "name": "Footer USP",
  "max_blocks": 6,
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer USP",
      "category": "Grid"
    }
  ]
}
{% endschema %}
