{% render 'grid-card', blocks: section.blocks %}

{% schema %}
{
  "name": "Grid Card",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Block title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid Card"
    }
  ]
}
{% endschema %}
